<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Canvas.Left="10">
  <TextBlock FontSize="20" Text="AngleX=20, AngleY=0">
    <TextBlock.RenderTransform>
      <SkewTransform AngleX="20"/>
    </TextBlock.RenderTransform>
  </TextBlock>
  <TextBlock Canvas.Top="30" FontSize="20" Text="AngleX=-20, AngleY=0">
    <TextBlock.RenderTransform>
      <SkewTransform AngleX="-20"/>
    </TextBlock.RenderTransform>
  </TextBlock>
  <TextBlock Canvas.Top="60" FontSize="20" Text="AngleX=0, AngleY=20">
    <TextBlock.RenderTransform>
      <SkewTransform AngleY="20"/>
    </TextBlock.RenderTransform>
  </TextBlock>
  <TextBlock Canvas.Top="240" FontSize="20" Text="AngleX=0, AngleY=-20">
    <TextBlock.RenderTransform>
      <SkewTransform AngleY="-20"/>
    </TextBlock.RenderTransform>
  </TextBlock>
  <TextBlock Canvas.Top="270" FontSize="20" Text="AngleX=20, AngleY=20">
    <TextBlock.RenderTransform>
      <SkewTransform AngleX="20" AngleY="20"/>
    </TextBlock.RenderTransform>
  </TextBlock>
</Canvas>