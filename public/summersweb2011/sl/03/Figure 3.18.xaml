<Path xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  Stroke="Black" StrokeThickness="10" Fill="Red">
  <Path.Data>
    <GeometryGroup>
      <!-- Triangle #1 -->
      <PathGeometry>
        <PathFigure StartPoint="20,20" IsClosed="True">
          <LineSegment Point="20,100"/>
          <LineSegment Point="100,100"/>
        </PathFigure>
      </PathGeometry>
      <!-- Triangle #2 -->
      <PathGeometry>
        <PathGeometry.Transform>
          <RotateTransform Angle="-15"/>
        </PathGeometry.Transform>
        <PathFigure StartPoint="20,20" IsClosed="True">
          <LineSegment Point="20,100"/>
          <LineSegment Point="100,100"/>
        </PathFigure>
      </PathGeometry>
    </GeometryGroup>
  </Path.Data>
</Path>
