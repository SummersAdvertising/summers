<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

<Path Canvas.Left="20" Canvas.Top="20" StrokeLineJoin="Miter"
  Stroke="Black" StrokeThickness="10" Fill="Red">
  <Path.Data>
    <PathGeometry>
      <PathFigure StartPoint="20,20" IsClosed="true">
        <LineSegment Point="20,100"/>
        <LineSegment Point="100,100"/>
      </PathFigure>
    </PathGeometry>
  </Path.Data>
</Path>

