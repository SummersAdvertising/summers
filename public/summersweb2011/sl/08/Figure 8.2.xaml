<Canvas xmlns="http://schemas.microsoft.com/client/2007" Canvas.Left="20" Canvas.Top="20">
  <!-- Only one Rectangle: -->
  <Ellipse Width="300" Height="300" Stroke="Lime">
    <Ellipse.Fill>
      <RadialGradientBrush>
        <GradientStop Color="Green" Offset="0"/>
        <GradientStop Name="middleStop1" Color="Lime" Offset="0"/>
        <GradientStop Name="middleStop2" Color="White" Offset="0"/>
        <GradientStop Color="White" Offset="1"/>
      </RadialGradientBrush>
    </Ellipse.Fill>
  </Ellipse>
  <!-- Some text: -->
  <TextBlock Name="progressBarText" FontSize="20" Foreground="White"
    Canvas.Left="128" Canvas.Top="135">0%</TextBlock>
</Canvas>
